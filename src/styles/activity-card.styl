@import 'nib'
@import 'config'

.activity
  position: relative
  margin: 30px 0

.activity-name
  font-size: 12px
  font-family: 'Roboto', sans-serif

.activity-chart-content
  position: relative
  margin-top: 3px

.activity-card-weekdays
  position: absolute
  left: 0
  top: 0

.activity-card-weekdays,
.activity-card-months
  font-size: 0.7em
  color: base-color-1

.activity-card-weekday
  position: absolute
  text-align: center
  width: 100%

.activity-card-months
  width: 100%
  display: flex

.activity-card-month-hidden
  visibility: hidden