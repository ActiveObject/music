@import 'config'
@import 'nib'
@import 'card'
@import 'theme-solarized'

*
  box-sizing: border-box

html, body, #app
  margin: 0
  padding: 0
  width: 100%
  height: 100%
  font-family: 'Roboto', sans-serif
  font-weight: 400
  font-style: normal
  font-size: 1rem

.app-container
  display: flex
  width: 100%
  height: 100%

.main-view
  width: 60%
  position: relative
  overflow: hidden
  transition: background-color 0.3s

.sidebar-view
  width: 40%
  height: 100%
  border-left: 1px solid #E2E2E2

.main-container
  width: 600px
  margin: 0 auto
  padding: 50px 0

.main-section-title
  font-size: 26px
  font-family: 'Roboto', sans-serif
  font-weight: 100
  line-height: 1.2em

.main-section
  padding: 20px 2px

.scroll-wrapper
  height: 100%
  overflow: hidden

.icon
  display: inline-block

@media screen and (min-width: 1100px)
  .main-view
    width: calc(100% - 520px)

  .sidebar-view
    width: 520px

@media screen and (min-width: 1500px)
  .main-view
    width: calc(100% - 600px)

  .sidebar-view
    width: 600px
