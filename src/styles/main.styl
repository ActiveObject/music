@import 'config'
@import 'nib'
@import 'theme-solarized'

*
  box-sizing: border-box

html, body, #app
  margin: 0
  padding: 0
  width: 100%
  height: 100%
  font-family: 'Roboto', sans-serif
  font-weight: 400
  font-style: normal
  font-size: 1rem

.app-container
  display: flex
  width: 100%
  height: 100%

.main-view
  width: 100%
  height: 100%
  overflow: hidden
  transition: background-color 0.3s, width 0.3s linear

.main-view-container
  height: 100%

.main-view .scroll-body
  padding: 50px 0

.main-section-title
  font-size: 26px
  font-family: 'Roboto', sans-serif
  font-weight: 100
  line-height: 1.2em

.main-section
  padding: 20px 2px

.scroll-wrapper
  height: 100%
  overflow: hidden

.icon
  display: inline-block

.play-btn
  user-select: none
