@import 'config'
@import 'nib'
@import 'theme-solarized'

*
  box-sizing: border-box

html, body, #app
  margin: 0
  padding: 0
  width: 100%
  height: 100%
  font-family: 'Roboto', sans-serif
  font-weight: 400
  font-style: normal
  font-size: 1rem

.app-container
  display: flex
  width: 100%
  height: 100%

.scroll-wrapper
  height: 100%
  overflow: hidden

.icon
  display: inline-block

.artist-profile
  padding: 70px 0
