@import 'activity-card'
@import 'active-track'
@import 'card'
@import 'tracklist'
@import 'group-profile'

*
  box-sizing: border-box

html, body, #app
  margin: 0
  padding: 0
  width: 100%
  height: 100%

.app-container
  display: flex
  width: 100%
  height: 100%

.main-view
  width: 60%
  position: relative

.sidebar-view
  background-color: #F0F0F0
  width: 40%
  height: 100%
  padding: 0 20px
  border-left: 1px solid #E2E2E2

.sidebar-content
  padding: 20px 0

.main-container
  width: 600px
  margin: 0 auto
  padding: 50px 0

.main-section-title
  color: rgba(0,0,0, .54)
  font-size: 34px
  font-family: 'Roboto', sans-serif
  font-weight: 100
  line-height: 1.2em

.main-section
  padding: 20px 2px

.scroll-wrapper
  height: 100%
  overflow: hidden

@media screen and (min-width: 1100px)
  .main-view
    width: calc(100% - 550px)

  .sidebar-view
    width: 550px

@media screen and (min-width: 1500px)
  .main-view
    width: calc(100% - 600px)

  .sidebar-view
    width: 600px
