@import 'config'
@import 'nib'
@import 'card'
@import 'theme-solarized'

*
  box-sizing: border-box

html, body, #app
  margin: 0
  padding: 0
  width: 100%
  height: 100%
  font-family: 'Roboto', sans-serif
  font-weight: 400
  font-style: normal
  font-size: 1rem

.app-container
  display: flex
  width: 100%
  height: 100%

.main-view
  width: 60%
  height: 100%
  position: relative
  overflow: hidden
  transition: background-color 0.3s, width 0.3s linear

.sidebar-view
  width: 40%
  height: 100%
  border-left: 1px solid #E2E2E2
  transition: width 0.3s linear
  position: relative

.main-view-container
  height: 100%

.main-view .scroll-body
  padding: 50px 0

.main-section-title
  font-size: 26px
  font-family: 'Roboto', sans-serif
  font-weight: 100
  line-height: 1.2em

.main-section
  padding: 20px 2px

.scroll-wrapper
  height: 100%
  overflow: hidden

.icon
  display: inline-block

.player-body
  transition: margin-top 0.5s ease-in-out

.tracklist-card
  height: 100%

.tracklist-card .track
  position: absolute
  padding: 0 10px

.tracklist-card .tracklist
  padding: 90px 0 40px 0

.group-sidebar
  height: 100%

@media screen and (min-width: 1100px)
  .main-view
    width: calc(100% - 520px)

  .sidebar-view
    width: 520px

@media screen and (min-width: 1400px)
  .main-view
    width: 50%

  .sidebar-view
    width: 50%

  .player-body
    margin-top: 40px

  .tracklist-card .tracklist
    padding-top: 140px

  .tracklist-card .track
    padding: 0
