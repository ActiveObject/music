@import 'nib'

.track-duration
  position: absolute
  right: 0
  margin-right: 15px
  margin-top: 21px
  height: 40px

.track
  display: flex
  height: 40px
  width: 100%
  margin: 20px 0
  font-size: 0.9em
  font-family: 'Roboto', sans-serif
  font-weight: 300

.track-title,
.track-artist
  text-overflow: ellipsis
  white-space: nowrap
  overflow: hidden
  line-height: 1.4em

.track-artist
  font-weight: 500

.track-desc
  margin-right: 80px
  margin-top: 6px
