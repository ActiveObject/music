@import 'nib'

.track
  display: flex
  align-items: center
  height: 40px
  width: 100%
  padding: 0 5px
  font-family: 'Roboto', sans-serif
  font-size: 0.9em
  transition: background-color 0.1s ease-in

.track-title,
.track-artist,
.track-duration
  margin: 0 5px

.track-title,
.track-artist
  text-overflow: ellipsis
  white-space: nowrap
  overflow: hidden

.track-title
  width: 50%

.track-artist
  width: 40%

.track-duration
  width: 10%
  text-align: right

.play-btn-cell
  cursor: pointer
  user-select: none

  .icon
    width: 40px
    height: 40px
    padding: 10px
    transition: fill 0.2s