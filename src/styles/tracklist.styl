@import 'config'
@import 'nib'

.tracklist
  width: 100%
  font-size: 0.8em
  font-family: 'Roboto', sans-serif

.tracklist-body
  position: relative

.play-btn
  width: 40px
  height: @width
  min-width: @width
  margin: 0 15px
  border-radius: 2px
  cursor: pointer
  transform: rotate(0)
  transition: background-color 0.2s, border-color 0.2s, transform 0.3s
  box-sizing: content-box

  .icon
    width: 40px
    height: 40px
    padding: 10px
    transition: fill 0.2s

.play-btn.active
  transform: rotate(90deg)

  .icon
    transform: rotate(-90deg)
    fill: white

.tracklist-header
  height: 70px
  background-color: #FAFAFA
  text-align: center
  border-bottom: 1px solid #F3F3F3

.tracklist-section-name
  text-align: center
  color: base-color-0
  margin-bottom: -10px
