@import 'config'

.tracklist
  width: 100%
  color: #616161
  font-size: 0.8em
  font-family: 'Roboto', sans-serif
  background-color: white
  margin: 10px 0
  padding-bottom: 10px

.tracklist-item
  display: flex
  height: 40px
  margin: 25px 0

.play-btn
  width: 40px
  height: @width
  min-width: @width
  margin: 0 15px
  border: 2px solid #EEE
  border-radius: 2px
  cursor: pointer
  transform: rotate(0)
  transition: background-color 0.2s, border-color 0.2s, transform 0.3s
  box-sizing: content-box

  .icon
    width: 40px
    height: 40px
    padding: 10px
    transition: fill 0.2s
    fill: #EEE

.play-btn:hover
  border-color: accent-color

  .icon
    fill: accent-color

.play-btn.active
  background-color: accent-color
  transform: rotate(90deg)
  border-color: accent-color

  .icon
    transform: rotate(-90deg)
    fill: white

.track-duration
  position: absolute
  right: 0
  width: 40px
  margin-right: 15px
  height: 40px
  margin-top: 21px

.tracklist-item-title,
.tracklist-item-artist
  text-overflow: ellipsis
  white-space: nowrap
  overflow: hidden

.tracklist-item-desc
  margin-right: 80px
  margin-top: 7px

.tracklist-header
  height: 40px
  background-color: #FAFAFA
  text-align: center
  line-height: 40px
  border-bottom: 1px solid #F3F3F3
