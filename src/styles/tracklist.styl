@import 'config'

.tracklist
  width: 100%
  color: #616161
  font-size: 0.8em
  font-family: 'Roboto', sans-serif
  background-color: white
  margin: 10px 0
  padding-bottom: 10px

.tracklist-item
  display: flex
  height: 40px
  margin: 25px 0

.play-btn
  width: 40px
  height: @width
  min-width: @width
  margin: 0 15px
  border: 2px solid #EEE
  border-radius: 2px
  cursor: pointer
  transition: background-color 0.2s, border-color 0.2s
  box-sizing: content-box

  .icon
    width: 40px
    height: 40px
    padding: 8px
    transition: fill 0.2s
    fill: #EEE

.play-btn:hover
  border-color: accent-color

  .icon
    fill: accent-color

.tracklist-item-title,
.tracklist-item-artist
  text-overflow: ellipsis
  white-space: nowrap
  overflow: hidden

.tracklist-item-desc
  margin-right: 45px
  margin-top: 5px

.tracklist-header
  height: 40px
  background-color: #FAFAFA
  text-align: center
  line-height: 40px
  border-bottom: 1px solid #F3F3F3
