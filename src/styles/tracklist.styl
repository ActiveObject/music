@import 'config'

.tracklist
  width: 100%
  color: #616161
  font-size: 0.8em
  font-family: 'Roboto', sans-serif
  padding-bottom: 10px

.play-btn
  width: 40px
  height: @width
  min-width: @width
  margin: 0 15px
  border: 2px solid #EEE
  border-radius: 2px
  cursor: pointer
  transform: rotate(0)
  transition: background-color 0.2s, border-color 0.2s, transform 0.3s
  box-sizing: content-box

  .icon
    width: 40px
    height: 40px
    padding: 10px
    transition: fill 0.2s
    fill: #EEE

.play-btn:hover
  border-color: accent-color

  .icon
    fill: accent-color

.play-btn.active
  background-color: accent-color
  transform: rotate(90deg)
  border-color: accent-color

  .icon
    transform: rotate(-90deg)
    fill: white

.track-duration
  position: absolute
  right: 0
  margin-right: 15px
  margin-top: 21px
  height: 40px

.tracklist-item
  display: flex
  height: 40px
  margin: 25px 0
  font-size: 0.9em
  font-family: 'Roboto', sans-serif
  font-weight: 300

.tracklist-item-title,
.tracklist-item-artist
  text-overflow: ellipsis
  white-space: nowrap
  overflow: hidden
  line-height: 1.4em

.tracklist-item-artist
  font-weight: 500

.tracklist-item-desc
  margin-right: 80px
  margin-top: 6px

.tracklist-header
  height: 70px
  background-color: #FAFAFA
  text-align: center
  border-bottom: 1px solid #F3F3F3

.tracklist-section-name
  text-align: center
  margin: 20px 15px -10px 15px
