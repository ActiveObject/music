@import 'config'
@import 'nib'

.player-body
  position: relative
  display: flex
  align-items: center

  height: 90px

  font-size: 12px
  font-family: 'Roboto', sans-serif

.player-body .play-btn
  margin-right: 15px

.active-track
  padding: 20px 0

.active-track-artist
  font-weight: 500

.active-track-time
  text-align: right
  margin-bottom: 10px

.active-track-separator
  margin: 0 3px

.active-track-desc
  text-overflow: ellipsis
  white-space: nowrap
  overflow: hidden
  margin-bottom: 10px;
  width: 82%

.active-track-progress
  position: absolute
  left: 55px
  right: 0
  top: 51px

.player-playlist-tabs
  position: relative
  width: 100%
  height: 0
  margin-top: -15px
  line-height: 25px
  transition: height 0.2s ease-in-out
  overflow: hidden

.player-playlist-tabs-active
  height: 25px
