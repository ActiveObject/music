.active-track
  display: flex
  align-items: center
  justify-content: space-between
  width: 100%
  height: 70px
  color: #616161
  font-family: 'Roboto', sans-serif
  font-weight: 300

.active-track-artist
  font-weight: 500

.active-track-duration
  margin: 0 15px
  min-width: 50px
  text-align: right

.active-track-separator
  margin: 0 3px

.active-track-desc
  text-overflow: ellipsis
  white-space: nowrap
  overflow: hidden
