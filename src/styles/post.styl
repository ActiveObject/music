@import 'config'

.post:not(:first-child)
  margin: 100px 0
  font-family: 'Roboto', sans-serif

.post-image
  width: 600px
  max-height: 400px
  overflow: hidden

.post-image img
  width: 100%

.post-owner-icon
  float: left
  margin: 0 10px 10px 0

.post-owner-icon img
  width: 40px
  height: 40px

.post-text
  font-size: 0.8em
  font-weight: 300
  color: base-color-00

.post header
  margin: 5px 0

.post-image,
.post header
  padding: 0 15px
